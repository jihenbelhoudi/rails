<p id="notice"><%= notice %></p>

<h1><strong>Announcements</strong></h1>
<table class="panel panel-success">

  <thead class="panel-heading">
    <tr>
      <th>Name</th>
      <th>Desscription</th>
      <th>User(contact par email)</th>
      <th colspan="3"></th>
    </tr>
  </thead>
</br>
  <tbody class="panel-body">
  <p>
    <% @announcements.each do |announcement| %>
      <tr>
        <td><%= announcement.name %></td>
        <td><%= announcement.desscription %></td>
        <td><%= announcement.user.email if announcement.user %></td>
        <td><%= link_to 'Show', announcement , :class=>"btn btn-success"  %></td>
        <td><%= link_to 'Edit', edit_announcement_path(announcement), :class=>"btn btn-warning"%></td>
        <td><%= link_to 'Destroy', announcement, method: :delete,  :class=>"btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
 
  </tbody>
</table>

<br>

<%= link_to 'New Announcement', new_announcement_path ,:class=>"btn btn-info"  %>
